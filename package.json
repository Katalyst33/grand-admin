{
  "name": "new-app-lite-ts",
  "version": "1.0.0",
  "description": "XpresserJs Typescript Lite App (No Views) Boilerplate ",
  "main": "app.ts",
  "repository": "https://github.com/xpresserjs/new-app-lite-ts",
  "author": "xpresserjs",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "npm run build && node build/app.js",
    "build": "npx xjs @stack tsc",
    "ts-watch": "npx tsc --watch",
    "ts-dev": "npx ts-node-dev --respawn --transpile-only app.ts",
    "js-dev": "npx nodemon --trace-warnings build/app.js",
    "dev:env": "npx jsonbank-env dev .env force"
  },
  "dependencies": {
    "@ilovepdf/ilovepdf-js": "^0.1.0",
    "@ilovepdf/ilovepdf-nodejs": "^0.1.1",
    "@techie04/xpresser-mailer": "^0.2.1",
    "@xpresser/auth": "^0.2.0",
    "@xpresser/env": "^2.1.1",
    "@xpresser/file-uploader": "^2.0.4",
    "@xpresser/session": "^1.4.2",
    "@xpresser/xpress-mongo": "^1.1.8",
    "amadeus": "^9.0.0",
    "bcrypt": "^5.0.1",
    "chance": "^1.1.7",
    "cookie-parser": "^1.4.5",
    "cron-time-generator": "^1.2.0",
    "express-session": "^1.17.2",
    "jsonbank-env": "^1.0.2",
    "jsonwebtoken": "^8.5.1",
    "mjml": "^4.11.0",
    "moment": "^2.29.1",
    "passport": "^0.5.0",
    "passport-google-oauth": "^2.0.0",
    "prettier": "^3.0.3",
    "promise-polyfill": "^8.2.1",
    "sharp": "^0.29.3",
    "slugify": "^1.6.2",
    "ts-node": "^10.9.1",
    "xpress-mongo": "^2.1.0",
    "xpresser": "^0.26.11"
  },
  "devDependencies": {
    "@types/mjml": "^4.7.0",
    "@types/node": "^17.0.12",
    "@types/sharp": "^0.29.4",
    "@xpresser/ngrok": "^2.2.1",
    "nodemon": "^2.0.15",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.5.3",
    "xjs-cli": "^1.1.3"
  }
}
