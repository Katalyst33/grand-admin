    "ts-dev": "npx ts-node-dev --respawn app.ts",
    "js-dev": "npx nodemon build/app.js"
  },
  "dependencies": {
    "@xpresser/auth": "^0.2.0",
    "@xpresser/session": "^1.4.2",
    "@xpresser/xpress-mongo": "^1.1.1",
    "bcrypt": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "cookie-parser": "^1.4.5",
    "express-session": "^1.17.2",
    "passport": "^0.4.1",
    "passport-google-oauth": "^2.0.0",
    "xpress-mongo": "^1.4.1",
    "xpresser": "^0.18.1"
  },
  "devDependencies": {
    "@types/node": "^15.12.4",
    "nodemon": "^2.0.7",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.3.4",
    "xjs-cli": "^0.3.1"
  }
}
